<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/firmname"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#02050a"
            android:layout_weight="5"
            android:textSize="30sp"
            android:gravity="center"
            android:paddingBottom="1sp"
            android:layout_height="43dp"
            android:text="@string/textview" />
        <ImageButton
            android:id="@+id/databtn"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:background="#1100ff"
            android:foregroundGravity="right"
            android:layout_gravity="bottom"
            android:contentDescription="@string/search"
            app:srcCompat="@drawable/ic_list" />
    </LinearLayout>

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_marginVertical="3sp"
        android:layout_height="27dp"
        android:paddingStart="10sp"
        android:textSize="17sp"
        android:text="@string/textview"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_marginVertical="3sp"
        android:layout_height="27dp"
        android:paddingStart="10sp"
        android:textSize="17sp"
        android:text="@string/textview"
        tools:ignore="RtlSymmetry" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2sp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:paddingStart="8sp"
            android:paddingVertical="3sp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="18sp"
            android:textColor="#123b16"
            android:text="@string/orderprice"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:paddingStart="8sp"
            android:paddingVertical="3sp"
            android:textSize="18sp"
            android:textColor="#123b16"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2sp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/act"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20sp"
            android:background="@drawable/registration_button"
            android:paddingHorizontal="8sp"
            android:layout_marginBottom="10sp"
            android:text="@string/registration"
            android:textColor="@color/colorPrimaryDark"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:layout_marginHorizontal="20sp"
            android:background="@drawable/sing_in_button"
            android:paddingHorizontal="8sp"
            android:layout_marginBottom="10sp"
            android:text="@string/delete"
            android:textColor="@color/colorPrimaryDark"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

</LinearLayout>